<% if @messages.errors.any? %>
  <h2>The following errors prevented the message from being saved</h2>
  <ul>
    <% @messages.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @messages, local: true) do |f| %>
<div class="text-center">
  <h1>
    <%= f.label :message %>
  </h1>
    <%= f.text_area :message %>
  
  
  <p class="text-center">
    <%= f.submit %>
  </p>
  <div/>

<% end %>
